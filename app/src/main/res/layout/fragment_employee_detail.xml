<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_background_color"
              android:clickable="true"
              android:padding="10dp">


    <ImageView
            android:layout_width="@dimen/employee_avatar_detail_size"
            android:layout_height="@dimen/employee_avatar_detail_size"
            android:id="@+id/employee_avatar"
            android:layout_gravity="center_horizontal"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/employee_name"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/employee_name_text_detail_size"
            android:textColor="@android:color/black"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/employee_department"
            android:textSize="@dimen/employee_department_text_detail_size"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/employee_about"/>
</LinearLayout>