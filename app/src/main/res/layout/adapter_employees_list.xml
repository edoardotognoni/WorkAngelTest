<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:padding="10dp">

    <ImageView
            android:layout_width="@dimen/employee_avatar_list_size"
            android:layout_height="@dimen/employee_avatar_list_size"
            android:id="@+id/employee_avatar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/employee_name"
                android:textSize="@dimen/employee_name_text_list_size"
                android:textColor="@android:color/black"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/employee_department"
                android:textSize="@dimen/employee_department_text_list_size"/>
            </LinearLayout>
</LinearLayout>